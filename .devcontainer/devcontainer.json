{
  "name": "My Net Worth Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "my-net-worth",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteEnv": {
    // "MONGO_DATABASE": "my_net_worth_db",
    // "MONGO_ROOT_USERNAME": "your_db_username",
    // "MONGO_ROOT_PASSWORD": "your_db_password",
    "MONGO_HOST": "mongodb",
    "MONGO_LOCAL_HOST": "mongodb://localhost:27017",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "30",
    "SECRET_KEY": "your_secret_key",
    "ALGORITHM": "HS256",
    "MINIMUM_PASSWORD_STRENGTH": "3"
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI"
    }
  }
}